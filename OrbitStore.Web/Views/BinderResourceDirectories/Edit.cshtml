@model OrbitStore.Web.Data.BinderResourceDirectory

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>BinderResourceDirectory</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BinderId)
    
            @Html.HiddenFor(model => model.BinderName)
    
            @Html.HiddenFor(model => model.BinderPath)
    
            @Html.HiddenFor(model => model.BinderActive)
    
            @Html.HiddenFor(model => model.ResourceId)
    
            @Html.HiddenFor(model => model.ResourcePath)
    
            @Html.HiddenFor(model => model.ResourceName)
    
            @Html.HiddenFor(model => model.ResourceActive)
    
            @Html.HiddenFor(model => model.LinkName)
    
            @Html.HiddenFor(model => model.LinkPath)
    
            @Html.HiddenFor(model => model.LinkActive)
    
            @Html.HiddenFor(model => model.DirectoryPath)
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
